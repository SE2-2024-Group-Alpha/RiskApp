<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:maxHeight="90dp"
        android:gravity="center"
        tools:context=".activities.LobbyList"
        android:padding="15dp"
        android:orientation="vertical">

    <TextView
            android:text="@string/choose_a_lobby"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <ListView
            android:id="@+id/lobby_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
    </ListView>

<!--    <Button-->
<!--            android:layout_margin="20sp"-->
<!--            android:textSize="15sp"-->
<!--            android:id="@+id/btn_join_lobby"-->
<!--            android:textAllCaps="true"-->
<!--            android:text="@string/join_lobby"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="60dp"/>-->

    <Button
            android:layout_marginBottom="5sp"
            android:textSize="15sp"
            android:id="@+id/btn_create_lobby"
            android:textAllCaps="true"
            android:text="@string/create_lobby"
            android:layout_width="200dp"
            android:layout_height="60dp"/>

    <Button
        android:id="@+id/btn_join_by_game"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5sp"
        android:text="@string/join_by_game"
        android:textAllCaps="true"
        android:textSize="15sp" />


</LinearLayout>