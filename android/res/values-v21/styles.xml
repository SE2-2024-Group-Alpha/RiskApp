<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:colorBackground">@color/ic_background_color</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>

        <!-- Button styles for Material Components -->
        <item name="materialButtonStyle">@style/MyApp.MaterialButton</item>
        <item name="android:buttonStyle">@style/MyApp.Button</item> <!-- For non-material buttons -->
    </style>

    <!-- Material Button style -->
    <style name="MyApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Legacy Button style for backward compatibility -->
    <style name="MyApp.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
